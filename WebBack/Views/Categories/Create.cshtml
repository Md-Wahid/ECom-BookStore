@model WebBack.Models.BookStore

@{
    ViewData["Title"] = "Create Book Categories";
}
<div class="text-center bg-info text-light py-4">
    <h1 class="display-4">Create</h1>
    <h1 class="display-6">Create a new book categories</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="POST">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary mb-1"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Back to List</a>
                <button type="submit" class="btn btn-primary mb-1"><i class="far fa-save"></i>&nbsp;Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}